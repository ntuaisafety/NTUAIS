---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const base = import.meta.env.BASE_URL;

const allEvents = await getCollection('events');
const today = new Date();

const upcoming = allEvents
  .filter(e => new Date(e.data.date) >= today)
  .sort((a, b) => new Date(a.data.date).getTime() - new Date(b.data.date).getTime());

const past = allEvents
  .filter(e => new Date(e.data.date) < today)
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
---

<BaseLayout title="Events" description="NTUAIS programs, reading groups, fellowships, and workshops on AI safety.">

  <section class="page-hero">
    <div class="container">
      <span class="section-badge">Programs &amp; Events</span>
      <h1>Our Events</h1>
      <p>
        From fellowships to reading groups, we run a variety of programs to help you
        engage with AI safety research.
      </p>
    </div>
  </section>

  {upcoming.length > 0 && (
    <section class="events-section">
      <div class="container">
        <h2 class="events-section-title">Upcoming</h2>
        <div class="events-list">
          {upcoming.map(event => (
            <a href={`${base}events/${event.slug}/`} class="card-linear event-row">
              <div class="event-row-meta">
                <span class={`section-badge section-badge--${event.data.badge_color ?? 'green'}`}>
                  {event.data.badge ?? 'Event'}
                </span>
                <time datetime={event.data.date.toISOString()}>
                  {event.data.date.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}
                </time>
              </div>
              <div class="event-row-body">
                <h3>{event.data.title}</h3>
                <p>{event.data.description}</p>
              </div>
              <span class="event-row-arrow" aria-hidden="true">→</span>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}

  {past.length > 0 && (
    <section class="events-section events-section--past">
      <div class="container">
        <h2 class="events-section-title">Past Events</h2>
        <div class="events-list">
          {past.map(event => (
            <a href={`${base}events/${event.slug}/`} class="card-linear event-row event-row--past">
              <div class="event-row-meta">
                <span class="section-badge">Past</span>
                <time datetime={event.data.date.toISOString()}>
                  {event.data.date.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}
                </time>
              </div>
              <div class="event-row-body">
                <h3>{event.data.title}</h3>
                <p>{event.data.description}</p>
              </div>
              <span class="event-row-arrow" aria-hidden="true">→</span>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}

  {allEvents.length === 0 && (
    <section class="events-section">
      <div class="container events-empty">
        <p>No events yet. Check back soon!</p>
      </div>
    </section>
  )}

</BaseLayout>

<style>
  .page-hero {
    padding: 4rem 0 2rem;
    border-bottom: 1px solid var(--linear-border-subtle);
  }

  .page-hero h1 {
    font-size: clamp(1.75rem, 4vw, 3rem);
    font-weight: 700;
    color: var(--linear-text-bright);
    margin: 0.75rem 0 0.75rem;
  }

  .page-hero p {
    color: var(--linear-subtext);
    max-width: 560px;
    font-size: 1.05rem;
  }

  .events-section {
    padding: 3rem 0;
  }

  .events-section--past {
    background: var(--linear-overlay-soft);
  }

  .events-section-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--linear-text-bright);
    margin-bottom: 1.25rem;
  }

  .events-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .event-row {
    display: grid;
    grid-template-columns: 180px 1fr auto;
    align-items: center;
    gap: 1.5rem;
    text-decoration: none;
    color: var(--linear-text);
  }

  .event-row--past {
    opacity: 0.75;
  }

  .event-row-meta {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .event-row-meta time {
    font-size: 0.8rem;
    color: var(--linear-muted);
  }

  .event-row-body h3 {
    font-size: 1rem;
    font-weight: 600;
    color: var(--linear-text-bright);
    margin-bottom: 0.25rem;
  }

  .event-row-body p {
    font-size: 0.875rem;
    color: var(--linear-subtext);
  }

  .event-row-arrow {
    font-size: 1.25rem;
    color: var(--linear-muted);
    transition: color var(--transition-fast), transform var(--transition-fast);
  }

  .event-row:hover .event-row-arrow {
    color: var(--linear-accent-green);
    transform: translateX(4px);
  }

  .events-empty {
    text-align: center;
    padding: 4rem 0;
    color: var(--linear-muted);
  }

  @media (max-width: 640px) {
    .event-row {
      grid-template-columns: 1fr;
      gap: 0.75rem;
    }

    .event-row-arrow {
      display: none;
    }
  }
</style>
