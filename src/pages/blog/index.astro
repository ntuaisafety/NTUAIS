---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const base = import.meta.env.BASE_URL;

const posts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
---

<BaseLayout title="Blog" description="Articles and course notes from the NTUAIS community on AI safety, alignment, and interpretability.">

  <section class="page-hero">
    <div class="container">
      <span class="section-badge">Blog</span>
      <h1>Writing</h1>
      <p>Research notes, course summaries, and perspectives from the NTUAIS community.</p>
    </div>
  </section>

  <section class="posts-section">
    <div class="container">
      {posts.length === 0 && (
        <p class="empty-state">No posts yet. Check back soon.</p>
      )}
      <div class="posts-list">
        {posts.map(post => (
          <a href={`${base}blog/${post.slug}/`} class="post-row card-linear">
            <div class="post-meta">
              <time datetime={post.data.date.toISOString()}>
                {post.data.date.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}
              </time>
              {post.data.tags.slice(0, 2).map(tag => (
                <span class="tag">{tag}</span>
              ))}
            </div>
            <h2>{post.data.title}</h2>
            {post.data.summary && <p class="post-summary">{post.data.summary}</p>}
            <span class="post-read-more">Read more â†’</span>
          </a>
        ))}
      </div>
    </div>
  </section>

</BaseLayout>

<style>
  .page-hero {
    padding: 4rem 0 2.5rem;
    border-bottom: 1px solid var(--linear-border-subtle);
  }

  .page-hero h1 {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 700;
    color: var(--linear-text-bright);
    margin: 0.75rem 0 0.5rem;
  }

  .page-hero p {
    color: var(--linear-subtext);
    font-size: 1.05rem;
    max-width: 560px;
  }

  .posts-section {
    padding: 3rem 0 5rem;
  }

  .posts-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    max-width: 760px;
  }

  .post-row {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    text-decoration: none;
    color: var(--linear-text);
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .post-meta time {
    font-size: 0.8rem;
    color: var(--linear-muted);
    font-weight: 500;
  }

  .tag {
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    padding: 0.15rem 0.5rem;
    border-radius: 999px;
    background: var(--linear-overlay-soft);
    border: 1px solid var(--linear-border-subtle);
    color: var(--linear-subtext);
  }

  .post-row h2 {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--linear-text-bright);
    line-height: 1.35;
  }

  .post-summary {
    font-size: 0.875rem;
    color: var(--linear-subtext);
    line-height: 1.6;
  }

  .post-read-more {
    font-size: 0.8rem;
    font-weight: 500;
    color: var(--linear-accent-green);
    margin-top: 0.25rem;
    transition: gap var(--transition-fast);
  }

  .empty-state {
    color: var(--linear-muted);
    padding: 4rem 0;
    text-align: center;
  }
</style>
